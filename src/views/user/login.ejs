<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>

    <link rel="stylesheet" href="../css/components/promotions.css">
    <link rel="stylesheet" href="../css/components/header-user.css">
    <link rel="stylesheet" href="../css/components/categories.css">
    <link rel="stylesheet" href="../css/components/login.css">
    <title>
        Login | PintaBar
    </title>
    <style>
        
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <section class="header-user2">
        <h2>Bienvenid@
         <img src="../img/title/beer.png" alt="Img beer"></h2>
        <h4>
           Login
        </h4>
    </section>
    <% if (locals.nextUrl) { %>
    <form class="Login" method="POST" action="/user/login?next=<%= locals.nextUrl %>">
    <% } else { %>
        <form class="Login" method="POST" action="/user/login">
    <% }%>
        <% if (locals.hasOwnProperty('error') 
                && locals.error !== null) { %>
            <p class="form__error-msg"><%= locals.error.message %></p>
        <% }%>
        <input class="controls" type="email" name="email" placeholder="Ingrese su Correo" minlength="4" 
        value="<%= locals.body? locals.body.email: '' %>"required>
        <input class="controls" type="password" name="password" placeholder="Ingrese su Contraseña" minlength="6" required>
        <a href="/user/forgot-password">¿Olvidaste tu contraseña?</a>
        <a>|</a>
        <a href="/user/register">Crear una cuenta</a>
        <input class="botons" type="submit" value="Iniciar Sesión">
        <div class="remember">
            <input class="check" type="checkbox" id="checkid">
            <label for="checkid">Recordar mis datos</label>
        </div>
    </form>

    <%- include('../partials/footer') %>

</body>
</html>
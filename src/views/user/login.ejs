<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>

    <link rel="stylesheet" href="../css/components/promotions.css">
    <link rel="stylesheet" href="../css/components/header-user.css">
    <link rel="stylesheet" href="../css/components/categories.css">
    <link rel="stylesheet" href="../css/components/form.css">
    <title>
        Login | PintaBar
    </title>
    <style>
        
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <section class="header-user2">
        <h2>Bienvenid<img src="/img/icons/X.png">
         <img src="../img/title/beer.png" alt="Img beer"></h2>
        <h4>
           Login
        </h4>
    </section>
    <% if (locals.nextUrl) { %>
    <form class="form" method="POST" action="/user/login?next=<%= locals.nextUrl %>">
    <% } else { %>
        <form class="form" method="POST" action="/user/login">
    <% }%>
        <div class="form__fields">
            <% if(locals.errorForm){ %>
                <p class="form__error-msg">
                    <%= errorForm %>
                </p>
            <% } %>
            <% if (locals.hasOwnProperty('error') 
                    && locals.error !== null) { %>
                <p class="form__error-msg"><%= locals.error.message %></p>
            <% }%>
            <div class="form__field">
                <input class="controls <%= locals.errors && errors.email ? 'is-invalid': null %>" id="email" type="email" name="email" placeholder="Ingrese su Correo"  
                value="<%= locals.oldData ? oldData.email : null %>">
                <% if(locals.errors && errors.email){ %>
                    <p class="form__error-msg">
                        <%= errors.email.msg %>
                    </p>
                <% } %>
            </div>
            
            <div class="form__field">
                <input class="controls <%= locals.errors && errors.password ? 'is-invalid': null %>" id="password" type="password" name="password" placeholder="Ingrese su Contraseña" >
                <% if(locals.errors && errors.password){ %>
                    <p class="form__error-msg">
                        <%= errors.password.msg %>
                    </p>
                <% } %>
                <ul class="password-help d-none">
                    <li>Debe tener al menos 8 caracteres.</li>
                    <li>Debe tener al menos un caracter.</li>
                    <li>Debe tener al menos un número.</li>
                </ul>
            </div>

            <a href="/user/forgot-password">¿Olvidaste tu contraseña?</a>
            <a>|</a>
            <a href="/user/register">Crear una cuenta</a>
            <input class="botons" type="submit" value="Iniciar Sesión">
            <div class="remember">
                <input class="check" type="checkbox" id="checkid" name="remember">
                <label for="checkid">Recordar mis datos</label>
            </div>
        </div>
    </form>

    <%- include('../partials/footer') %>
    <script src="/js/login.js"></script>

</body>
</html>